<%= simple_form_for [ @quote ] do |f| %> 
  <%= f.input :content %> 
  <%= f.input :source_link %> 
  <%= f.association :source_tracker, label_method: :name, value_method: :id, include_blank: "(select if none)" %>
  <%= f.association :politician, label_method: :first_name, value_method: :id, include_blank: false %>
  <%= f.submit "Submit review", class: "btn btn-primary" %> 
<% end %>
